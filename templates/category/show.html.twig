{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    {% for program in programs %}
    <div class="col-4 card">
        <div class="card-header text-center">
            <h3>
                <a href="{{ path("program_show", { id: program.id }) }}">{{program.title}}
                </a>
            </h3>
        </div>
        <div class="card-body">{{program.synopsis}}</div>
     </div>
    {% endfor %}
   

    <br><a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>

{% endblock %}